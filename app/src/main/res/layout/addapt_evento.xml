<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/immagine"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#515d7fd3"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/text">

        <TextView
            android:id="@+id/data"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titolo"
            android:layout_alignStart="@+id/titolo"
            android:layout_marginStart="3dp"
            android:layout_marginTop="13dp"
            android:text="event on "
            android:textColor="#fffefc"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/luogo"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/data"
            android:layout_alignStart="@+id/titolo"
            android:layout_marginStart="2dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="-12dp"
            android:text="event on "
            android:textColor="#fffefc"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/titolo"
            android:layout_width="250dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:text="event on "
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </RelativeLayout>




<ImageView

    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_alignRight="@id/immagine"
    android:layout_marginTop="79dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/circle100x100">  </ImageView>

    <ImageView
        android:id="@+id/like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/immagine"
        android:layout_marginTop="88dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/ic_favorite"></ImageView>


    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/like"
        android:layout_alignRight="@id/immagine"
         android:layout_marginTop="-6dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

</RelativeLayout>