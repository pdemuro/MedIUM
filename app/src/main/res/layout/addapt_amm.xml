<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/immagine"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#515d7fd3"/>


    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/telefono"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:text="Telefono"
            android:textColor="#fffefc"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:text="Mail"
            android:textColor="#fffefc"
            android:textSize="18dp" />

    </RelativeLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/immagine"
        android:layout_marginTop="80dp"
        android:layout_marginRight="90dp"
        android:background="@color/verdeprenota"
        android:text=""
        android:id="@+id/accetta">

    </Button>
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignRight="@id/immagine"
    android:layout_marginTop="80dp"
    android:layout_marginRight="20dp"
    android:background="@color/rossoButton"
    android:text=""
    android:id="@+id/rifiuta">

</Button>

    <TextView
        android:id="@+id/nome_utente"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"

        android:text="Nome utente"
        android:textColor="#ffffff"
        android:textSize="25dp" />


</RelativeLayout>